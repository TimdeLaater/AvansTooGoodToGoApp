
@model DomainModel.Models.Package;
@{

}
<div class="text-center">
    <h1 class="display-4">Voeg het pakket toe</h1>
</div>
<div>
    <form asp-action="AddPAckage" method="post">

        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Name">Naam</label>
            <input asp-for="Name" />
        </div>
        <div>
            <label asp-for="Price">Prijs</label>
            <input asp-for="Price" />
        </div>
        <div>
            <label asp-for="Canteen">Kantine</label>
            <input asp-for="Canteen" />
        </div>
        <div class="tablealign">
            <div></div>
            <table class="table table-sm table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            <div>Naam</div>
                        </th>
                       <th>
                            <div>Alchohol</div>
                        </th>
                        
                        <th><div></div></th>
                        <th>
                            <a class="btn btn-sm btn-primary" asp-action="Filtro" asp-route-id="">
                                SEARCH
                            </a>
                        </th>
                        <th><div></div></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.data)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Alcohol
                            </td>
                        
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ProductId">
                                    EDIT
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.ProductId">
                                    DETAILS
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">
                                    DELETEthis
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addProductToPackage" data-url="@Url.Action("AddProducts")">Voeg product toe</button>
        </div>
        

        <button class="btn btn-primary" type="button">Voeg pakket toe</button>
    </form>
</div>
